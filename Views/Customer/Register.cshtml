@using Northwind.Models;
@model CustomerWithPassword;
@{
    ViewData["Title"] = "Register";
}
    <div class="jumbotron my-2 border border-secondary" style="background: #4d545e; color: white; display: flex; flex-flow: column wrap; align-items: center; position: relative;">
        <h2 class="mt-3"><i class="far fa-address-card"></i> Sign up for an account</h2>

        <form method="post" asp-action="Register">
            <div asp-validation-summary="All" style="color:red;"></div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Customer.Email">Email</label>
                    <input asp-for="@Model.Customer.Email" class="form-control" placeholder="Email" required />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Password">Password</label>
                    <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Password" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Customer.CompanyName">Company Name</label>
                    <input asp-for="@Model.Customer.CompanyName" class="form-control" placeholder="Company Name" required />
                </div>
            </div>
                <div class="addressRow" style="display: block; justify-content: center; margin: 0 auto;" >
            <div class="form-row" >
                <div class="form-group col-md-10" >
                    <label asp-for="@Model.Customer.Address">Address</label>
                    <input asp-for="@Model.Customer.Address" class="form-control" placeholder="Address" />
                </div>
            </div>
                <div class="form-row" >
                    <div class="form-group col-md-4" >
                        <label asp-for="@Model.Customer.City">City</label>
                        <input asp-for="@Model.Customer.City" class="form-control" placeholder="City" />
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="@Model.Customer.Region">Region</label>
                        <input asp-for="@Model.Customer.Region" class="form-control" placeholder="State" />
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@Model.Customer.PostalCode">Postal Code</label>
                        <input asp-for="@Model.Customer.PostalCode" class="form-control" placeholder="Zip" />
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="@Model.Customer.Country">Country</label>
                        <input asp-for="@Model.Customer.Country" class="form-control" placeholder="Country" />
                    </div>
                </div>
                </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="@Model.Customer.Phone">Phone</label>
                    <input asp-for="@Model.Customer.Phone" type="tel" class="form-control" placeholder="Phone" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="@Model.Customer.Fax">Fax</label>
                    <input asp-for="@Model.Customer.Fax" type="tel" class="form-control" placeholder="Fax" />
                </div>
            </div>
            

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        </div>