@using  Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>


<h4>Roles</h4>

<div class="text-danger" asp-validation-summary="All"></div>

<table class="table table-sm table-bordered">
    <tr><th>Name</th><th>Email</th></tr>
    @if (!Model.Any())
    {
        <tr><td colspan="3" class="text-center">No Roles</td></tr>
    }

    else
    {

        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@role.Id">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>



                    </form>
                </td>


            </tr>

        }
    }
</table>

<a class="btn btn-outline-primary" asp-action="Create">Create</a>

